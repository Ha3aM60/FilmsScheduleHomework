@page
@model WebApplication5.Pages.SearchModel
@{
}
<body>
	<div style="width:100vh;">
		<form method="post">
			<label >Search	</label>
			<input type="text" name="myInput"/>
			<button class="button" type="submit">Go</button>
		</form> 
		<h1 style="color:white;">Sesions</h1>
		<div class="List">
			<ul class="ul-style">
				@foreach (var film in Model.Films)
				{
					<li class="li-style">@film.Name - @film.Author - @film.Style - @film.Description <a asp-page="./Details" class="button" asp-route-id=@film.Id>Details</a></li>
				}
			</ul>
		</div>
	</div>
</body>

<style>
	.ul-style {
		list-style-type: none;
		margin: 0;
		padding: 0;
	}
	body{
		background: rgb(128,128,128);
	}
	.li-style {
		display: block;
		padding: 10px;
		margin-bottom: 5px;
		background-color: #f2f2f2;
		border-radius: 5px;
		box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
		transition: all 0.3s ease;
	}

		.li-style:hover {
			background-color: #ddd;
			transform: scale(1.05);
		}

	.button:hover {
		color: white;
	}
	.button {
		padding:5px;
		display: inline-block;
		background-color: rgb(255, 51, 0); 
		width: 100px;
		color: #ffffff;
		text-align: center;
		border: 4px double #cccccc;
		border-radius: 10px;
		font-size: 14px;
		cursor: pointer; 
		margin: 5px; 
		height: 45px;
	}
</style>
